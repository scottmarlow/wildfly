<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="urn:jboss:domain:cassandra:1.0" xmlns:ns1="urn:jboss:domain:cassandra:1.0">
  <xs:element name="subsystem">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="ns1:cassandra" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="cassandra">
    <xs:complexType>
      <xs:attribute name="id" use="required" type="xs:NCName"/>
      <xs:attribute name="module" use="optional" type="xs:NCName"/>
      <xs:attribute name="host-name" use="required" type="xs:NCName"/>
      <xs:attribute name="host-port" use="optional" type="xs:integer"/>
      <xs:attribute name="jndi-name" use="required" type="xs:anyURI"/>
      <xs:attribute name="database" use="optional" type="xs:NCName"/>
    </xs:complexType>
  </xs:element>
</xs:schema>